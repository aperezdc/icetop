srcdir = @srcdir@
VPATH  = @srcdir@

CXX = @CXX@
LD  = @CXX@

CPPFLAGS = @CPPFLAGS@ @DEFS@
CXXFLAGS = @ICETOP_CFLAGS@ @CXXFLAGS@ -std=c++14 -Wall
LDLIBS   = @ICETOP_LIBS@ @LIBS@
LDFLAGS  = @LDFLAGS@

ALL_OBJS = icetop.o util/getenv.o

all: icetop

icetop: $(ALL_OBJS)
	$(LD) $(LDFLAGS) -o $@ $(ALL_OBJS) $(LDLIBS)


clean:
	$(RM) $(ALL_OBJS) icetop


DESTDIR ?=
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@


install: icetop
	install -Dm755 icetop '$(DESTDIR)$(bindir)/icetop'

.PHONY: install
